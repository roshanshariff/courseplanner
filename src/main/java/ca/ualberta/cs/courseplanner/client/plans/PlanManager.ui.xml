<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.planManager {
			padding: 0.5em;
			line-height: 150%;
		}
	</ui:style>

	<g:DisclosurePanel addStyleNames='{style.planManager}'>
		<g:customHeader>
			<g:FlowPanel>
				<g:Label style='float: left'>My Plans</g:Label>
				<g:PushButton ui:field="createButton" style='float:right'>Create...</g:PushButton>
			</g:FlowPanel>
		</g:customHeader>
		<g:Label ui:field="guestLabel">Log in to create and view plans.</g:Label>
	</g:DisclosurePanel>

</ui:UiBinder>
