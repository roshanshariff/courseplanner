<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:cell='urn:import:com.google.gwt.user.cellview.client'
	xmlns:view='urn:import:ca.ualberta.cs.courseplanner.client.views'>

	<ui:style>
	
		@external .buttonBar;
		@external .spacer;
		@external .rightJoin;
		@external .leftJoin;
		
		.buttonBar {
		}
		
		.buttonBar div {
			float: left;
			font-size: 75%;
			text-transform: uppercase;
		}
		
		.buttonBar .spacer {
			margin-left: 0.5em;
		}
		
		.buttonBar .rightJoin {
			border-right: solid 1px light-gray;
		}
		
		.buttonBar .leftJoin {
			border-left: none;
		}
	
		h1 {
			font-size: 150%;
			margin-bottom: 5px;
		}
		
		.navBar {
			width: 15em;
			float: left;
			border-bottom: solid 1px #CCCCCC;
		}
		
		.navBarItem {
			display: block;
			padding: 0.5em 1em;
		}
		
		.navBarNewItem {
			border-top: solid 1px #CCCCCC;
		}
		
		.navBarHeader {
			text-transform: uppercase;
			color: #666666;
			font-weight: bold;
			font-size: 0.75em;
			padding: 0.5em 0.75em 0em;
		}
		
		.mainPanel {
			margin-left: 15em;
		}
		
		.searchCoursesView {
			padding: 0.5em 1em;
		}
		
		.contentPanel {
			padding: 2em;
		}
		
		.footer {
			clear: both;
			text-align: center;
			padding: 3em;
		}
		
		.table {
			width: 100%;
		}
		
	</ui:style>

	<g:FlowPanel>

		<g:FlowPanel addStyleNames="{style.navBar}">

			<g:HTML addStyleNames="{style.navBarItem}">
				<b>rshariff@ualberta.ca</b>
				<br />
				<a href="javascript:">Sign out</a>
				|
				<a href="javascript:">Settings</a>
			</g:HTML>

			<g:Anchor ui:field="searchCoursesLink" addStyleNames="{style.navBarItem}, {style.navBarNewItem}" href="javascript:">Find Courses...</g:Anchor>

			<g:Anchor ui:field="myTranscriptLink" addStyleNames="{style.navBarItem}, {style.navBarNewItem}" href="javascript:">My Transcript</g:Anchor>

			<g:Anchor ui:field="createPlanLink" addStyleNames="{style.navBarItem}, {style.navBarNewItem}" href="javascript:">Create Plan...</g:Anchor>

			<g:Label addStyleNames="{style.navBarHeader}, {style.navBarNewItem}">My Plans</g:Label>
			<view:PlanList ui:field="planList" addStyleNames="{style.navBarItem}" />

			<g:Label addStyleNames="{style.navBarHeader}, {style.navBarNewItem}">My Saved Searches</g:Label>
			<g:FlowPanel ui:field='searchList' addStyleNames="{style.navBarItem}" />

		</g:FlowPanel>

		<g:FlowPanel addStyleNames="{style.mainPanel}">

			<g:FlowPanel>

				<view:SearchCoursesView ui:field="searchCoursesView"  addStyleNames="{style.searchCoursesView}"/>

				<g:SimplePanel ui:field="content" addStyleNames="{style.contentPanel}">
				
					<g:HTMLPanel>
					
						<h1>Search Results</h1>
					
						<div class="buttonBar">
						<g:PushButton addStyleNames="rightJoin"><g:upFace>Add To <strong>Plan</strong> &#9660;</g:upFace></g:PushButton>
						<g:PushButton addStyleNames="leftJoin"><g:upFace><strong>Transcript</strong></g:upFace></g:PushButton>
						<g:PushButton addStyleNames="spacer">Save Search</g:PushButton>
						<g:PushButton addStyleNames="spacer">Order By: Relevance &#9660;</g:PushButton>
						</div>
					
					</g:HTMLPanel>
				
				</g:SimplePanel>

			</g:FlowPanel>

		</g:FlowPanel>

		<g:HTML addStyleNames="{style.footer}">
			<a href="#">Help</a> |
			<a href="http://www.cs.ualberta.ca/">Department of Computing Science</a> |
			<a href="http://www.ualberta.ca/">University of Alberta</a>
		</g:HTML>

	</g:FlowPanel>

</ui:UiBinder>
